<h3>Course: <%= @course.coursename %></h3>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th style="width:300px;">Student </th>

      <th style="width:50px;">Grade</th>
      <th >Comment</th>
    </tr>
  </thead>
  <tbody>
    <% @students.alpha.each do |student| %>
      <tr>
         <td><%= student.last_name %> ,<%= student.first_name%></td>
         <% grade=student.grades.find_by course_id: @course.id %>
          <% if grade %>
            <td> <%= grade[:value] %> </td>
            <td> <%= grade[:comment]%> </td>
          <% else %>
              <td> NG </td>
              <td> No Comment </td>
          <% end %>
      </tr>
    <% end %>

  </tbody>
</table>
<% if @course.user == current_user %>
<p> *** NOTE *** Once all the grades are done the course will be CONCLUDED </p>
<p>



    <% if @course.grades.count < @students.count %>
        <%= link_to "Enter Grade/Comment", new_course_grade_path(@course) %></button>
          <button class="btn btn-outline-primary">

    <% end %>



</p>

<% end %>
