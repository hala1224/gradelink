<h3>Your new course: <%= @course.coursename %></h3>
<h4>Your students:</h4>
<!-- Create a table here and list -->
<table class='table table-bordered'>
  <thead>
    <tr>
      <th style="width:30px;"> Course Roster </th>

      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
         <td><%= student.id%></td>
          <td><%= student.last_name %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<% if @course.user == current_user %>
  <%= link_to "Edit Course", edit_course_path(@course) %>
  <%= link_to "Delete Course", course_path(@course), method: :delete  %>
<% end %>
