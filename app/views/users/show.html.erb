
<br><br>
<h1> Welcome <%= @user.username %> </h1>
<table class='table table-bordered'>
  <thead>
    <tr>
      <th style="width:30px;"> Courses </th>

      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |c| %>
      <tr>

          <td><%= c.coursename %></td>
      </tr>
    <% end %>

<% if current_user %>
  <% @new_course = Course.new(user_id: @user.id).save %>
  <%= link_to "New Course", new_course_path(@new_course) %>

<% end %>
