<!--This will be the dashboard for specific student  -->
<!--List of courses with the associated grade  -->
<!--   -->

<h3>Dashboard for: <%= @student.first_name %>, <%=@student.last_name %></h3>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th style="width:300px;">Course </th>

      <th style="width:50px;">Grade</th>
      <th >Comment</th>
    </tr>
  </thead>
  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <% course = @courses.find_by id: grade.course_id %>
        <% if course[:user_id] == current_user.id %>
            <td><%= course[:coursename] %> </td>

            <% if grade == nil  %>
                <td> NG </td>
                <td>No Comment </td>
            <% else %>

                 <td><%= grade[:value] %></td>
                 <td><%= grade[:comment] %></td>

            <% end %>
          <% end %>
      </tr>
    <% end %>

  </tbody>
</table>
